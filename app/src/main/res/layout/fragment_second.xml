<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="secondViewModel"
            type="com.lkdigital.practiceandroid.SecondViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SecondFragment">

        <TextView
            android:id="@+id/second_fragment_tv_clicks"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="@{secondViewModel.clicks.toString()}"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <Button
            android:id="@+id/second_fragment_bt_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

        <Button
            android:id="@+id/second_fragment_bt_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click" />
    </LinearLayout>
</layout>